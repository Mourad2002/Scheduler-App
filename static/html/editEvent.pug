doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css', integrity='sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO', crossorigin='anonymous')
    title Add Event
  body
    nav.navbar.navbar-expand-lg.navbar-light.bg-light
      ul.nav.nav-pills
        li.nav-item
          a.nav-link(href='/') Home
        li.nav-item
          a.nav-link(href='/schedule') Schedule
        li.nav-item.active
          a.nav-link.active(href='/addEvent') Add Event
    br
    .container.mb-5
      form#editEventForm(method = "post", action=`/change/${event.event_id}`)
        .form-group
          label(for='nameInput') Event Name
          input#nameInput.form-control(type='text', name='event', value=event.event_event,  pattern='[a-zA-Z0-9\s]+', title='Event must be alphanumeric', required='')
        .form-group
          label(for='dayInput') Day of Week
          select#dayInput.form-control(name='day')
            option(value='') Select Day
            option(value='sunday' selected = (event.event_day == 'Sunday')) Sunday
            option(value='monday' selected = (event.event_day == 'Monday')) Monday
            option(value='tuesday' selected = (event.event_day == 'Tuesday')) Tuesday
            option(value='wednesday' selected = (event.event_day == 'wednesday')) Wednesday
            option(value='thursday' selected = (event.event_day == 'Thursday')) Thursday
            option(value='friday' selected = (event.event_day == 'Friday')) Friday
            option(value='saturday' selected = (event.event_day == 'Saturday')) Saturday
        .form-group
          label(for='startTimeInput') Start Time
          input#startTimeInput.form-control(type='time', value=event.event_start, name='start', required='')
        .form-group
          label(for='endTimeInput') End Time
          input#endTimeInput.form-control(type='time', value=event.event_end, name='end', required='')
        .form-group
          label(for='phoneInput') Phone Number
          input#phoneInput.form-control(type='tel', value=event.event_phone, name='phone', required='')
        .form-group
          label(for='locationInput') Location
          input#locationInput.form-control(type='text', value=event.event_location, name='location', required='')
        .form-group
          label(for='extraInput') Extra Information
          input#extraInput.form-control(type='text', value=event.event_info, name='info')
        .form-group
          label(for='urlInput') URL for Extra Information
          input#urlInput.form-control(type='url', value=event.event_url, name='url')
        button#submitBtn.btn.btn-block.btn-primary(type='submit') Submit
        #overlapAlert.container.mt-3











